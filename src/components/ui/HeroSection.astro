---
interface Props {
  tagline?: string;
  subtitle?: string;
}

const { 
  tagline = "Architecting human-centered digital experiences through code",
  subtitle = "Crafting at the intersection of technology and design"
} = Astro.props;
---

<section class="min-h-screen flex flex-col justify-center px-8 md:px-16 lg:px-24 pt-20 md:pt-16" style="view-transition-name: hero-section;">
  <div class="max-w-4xl">
    <p class="hero-tagline text-lg md:text-xl lg:text-2xl text-slate-700 leading-relaxed font-light mb-3">
      <span>Architecting</span> <span>human-centered</span> <span>digital</span> <span>experiences</span> <span>through</span> <span>code</span>
    </p>
    
    <div class="text-sm text-slate-500">
      {subtitle}
    </div>
    
    <div class="mt-8">
      <button 
        type="button"
        class="scroll-arrow group cursor-pointer opacity-60 hover:opacity-90 transition-opacity duration-300"
        onclick="window.scrollTo({top: window.innerHeight * 0.65, behavior: 'smooth'})"
        aria-label="Scroll to main content"
      >
        <div class="text-slate-400 tracking-wider animate-bounce">â†“</div>
      </button>
    </div>
  </div>
</section>

<style>
  .hero-tagline {
    font-variation-settings: 'wght' 300, 'wdth' 100, 'slnt' 0;
  }

  @keyframes fontBreathe {
    0% {
      font-variation-settings: 'wght' 300, 'wdth' 100, 'slnt' 0;
    }
    45% {
      font-variation-settings: 'wght' 550, 'wdth' 120, 'slnt' 0;
    }
    80% {
      font-variation-settings: 'wght' 550, 'wdth' 120, 'slnt' 0;
    }
    100% {
      font-variation-settings: 'wght' 300, 'wdth' 100, 'slnt' 0;
    }
  }

  .hero-tagline span {
    animation: fontBreathe 2s ease-in-out infinite;
    display: inline-block;
    transition: font-variation-settings 0.2s;
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    .hero-tagline {
      font-size: 1.125rem !important;
      line-height: 1.6;
      font-variation-settings: 'wght' 550, 'wdth' 110, 'slnt' 0;
    }
    
    .hero-tagline span {
      white-space: normal;
      display: inline;
      animation: none;
    }
  }

  .hero-tagline span:nth-child(1) { animation-delay: 0s; }
  .hero-tagline span:nth-child(2) { animation-delay: 0.15s; }
  .hero-tagline span:nth-child(3) { animation-delay: 0.3s; }
  .hero-tagline span:nth-child(4) { animation-delay: 0.45s; }
  .hero-tagline span:nth-child(5) { animation-delay: 0.6s; }
  .hero-tagline span:nth-child(6) { animation-delay: 0.75s; }
</style>
