---
import FooterLicense from './FooterLicense.astro';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["border-t border-slate-200 dark:border-slate-700 pt-8 mt-16", className]}>
  <div class="flex flex-col sm:flex-row justify-between items-center text-sm text-slate-500 dark:text-slate-400 font-mono">
    <div class="whitespace-nowrap">Designed by Alan. All rights reserved.</div>
    <div class="mt-2 sm:mt-0 whitespace-nowrap">
      <FooterLicense />
    </div>
  </div>
</div>

<style>
  @reference "tailwindcss";
</style>
