---
interface Props {
  href: string;
  external?: boolean;
  class?: string;
  id?: string;
}

const { href, external = true, class: className, id } = Astro.props;
---

<a 
  href={href}
  class:list={["external-link group", className]}
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
  id={id}
>
  <span class="external-link-text"><slot /></span>
  <svg 
    class="external-link-icon" 
    width="16" 
    height="16" 
    viewBox="0 0 24 24" 
    fill="none" 
    xmlns="http://www.w3.org/2000/svg"
  >
    <path 
      d="M7 17L17 7M17 7H7M17 7V17" 
      stroke="currentColor" 
      stroke-width="2" 
      stroke-linecap="round" 
      stroke-linejoin="round"
    />
  </svg>
</a>

<style>
  @reference "tailwindcss";
  
  .external-link {
    @apply inline-flex items-center;
    @apply px-4 py-3 border border-slate-200 rounded-lg;
    @apply bg-white text-slate-700 font-mono text-sm;
    @apply hover:bg-slate-50 hover:border-slate-300 hover:text-slate-900;
    @apply hover:-translate-y-0.5 hover:shadow-md;
    @apply active:translate-y-0 active:shadow-sm;
    @apply transition-all duration-300 ease-out;
    @apply relative overflow-hidden;
    text-decoration: none;
  }

  .external-link-text {
    @apply transition-colors duration-300 ease-out;
  }

  .external-link-icon {
    @apply text-slate-400 w-4 h-4;
    @apply transition-all duration-300 ease-out;
    @apply opacity-0 scale-75 w-0;
    @apply group-hover:opacity-100 group-hover:scale-100 group-hover:w-4;
    @apply group-hover:text-slate-600 group-hover:ml-1;
    flex-shrink: 0;
    overflow: hidden;
  }

  /* Shimmer effect */
  .external-link::before {
    content: '';
    @apply absolute inset-0 -translate-x-full;
    background: linear-gradient(90deg, transparent, rgba(148, 163, 184, 0.1), transparent);
    @apply group-hover:translate-x-full;
    transition: transform 0.6s ease;
  }
</style>