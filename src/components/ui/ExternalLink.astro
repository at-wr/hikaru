---
interface Props {
  href: string;
  external?: boolean;
  class?: string;
  id?: string;
  rel?: string;
}

const { href, external = true, class: className, id, rel } = Astro.props;

const relAttribute = (() => {
  const parts: string[] = [];
  
  if (external) {
    parts.push('noopener', 'noreferrer');
  }
  
  if (rel) {
    parts.push(...rel.split(' ').filter(Boolean));
  }
  
  return parts.length > 0 ? parts.join(' ') : undefined;
})();
---

<a 
  href={href}
  class:list={["external-link group focus-ring", className]}
  target={external ? "_blank" : undefined}
  rel={relAttribute}
  id={id}
>
  <span class="external-link-text"><slot /></span>
  <svg 
    class="external-link-icon" 
    width="16" 
    height="16" 
    viewBox="0 0 24 24" 
    fill="none" 
    xmlns="http://www.w3.org/2000/svg"
    aria-hidden="true"
  >
    <path 
      d="M7 17L17 7M17 7H7M17 7V17" 
      stroke="currentColor" 
      stroke-width="2" 
      stroke-linecap="round" 
      stroke-linejoin="round"
    />
  </svg>
</a>

<style>
  @reference "tailwindcss";
  
  .external-link {
    @apply inline-flex items-center;
    @apply px-4 py-3 border border-slate-200 dark:border-slate-700 rounded-lg;
    @apply bg-white dark:bg-slate-800 text-slate-700 dark:text-slate-300 font-mono text-sm;
    @apply hover:bg-slate-50 dark:hover:bg-slate-700 hover:border-slate-300 dark:hover:border-slate-600 hover:text-slate-900 dark:hover:text-slate-100;
    @apply hover:-translate-y-0.5 hover:shadow-md;
    @apply active:translate-y-0 active:shadow-sm;
    @apply transition-all duration-300 ease-out;
    @apply relative overflow-hidden;
    text-decoration: none;
  }

  .external-link-text {
    @apply transition-colors duration-300 ease-out;
  }

  .external-link-icon {
    @apply text-slate-400 dark:text-slate-300 w-4 h-4;
    @apply transition-all duration-300 ease-out;
    @apply opacity-0 scale-75 w-0;
    @apply group-hover:opacity-100 group-hover:scale-100 group-hover:w-4;
    @apply group-hover:text-slate-600 dark:group-hover:text-slate-100 group-hover:ml-1;
    flex-shrink: 0;
    overflow: hidden;
  }

  .external-link::before {
    content: '';
    @apply absolute inset-0 -translate-x-full;
    background: linear-gradient(90deg, transparent, rgba(148, 163, 184, 0.1), transparent);
    @apply group-hover:translate-x-full;
    transition: transform 0.6s ease;
  }
</style>
