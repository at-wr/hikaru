---
interface Props {
  href: string;
  external?: boolean;
  class?: string;
  id?: string;
}

const { href, external = false, class: className, id } = Astro.props;
---

<a 
  href={href}
  class:list={["contact-link", className]}
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
  id={id}
>
  <span class="contact-arrow">â†’</span>
  <slot />
</a>

<style>
  @reference "tailwindcss";
  
  .contact-link {
    @apply inline-flex items-center gap-2;
    @apply px-4 py-3 border border-slate-200 rounded-lg;
    @apply bg-white text-slate-700 font-mono text-sm;
    @apply hover:bg-slate-50 hover:border-slate-300 hover:text-slate-900;
    @apply hover:-translate-y-0.5 hover:shadow-md;
    @apply active:translate-y-0 active:shadow-sm;
    @apply transition-all duration-300 ease-out;
    @apply relative overflow-hidden;
    text-decoration: none;
  }

  .contact-arrow {
    @apply transition-transform duration-300 ease-out;
  }

  .contact-link:hover .contact-arrow {
    @apply translate-x-1;
  }

  /* Shimmer effect */
  .contact-link::before {
    content: '';
    @apply absolute inset-0 -translate-x-full;
    background: linear-gradient(90deg, transparent, rgba(148, 163, 184, 0.1), transparent);
    @apply hover:translate-x-full;
    transition: transform 0.6s ease;
  }
</style>
