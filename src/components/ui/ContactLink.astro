---
interface Props {
  href: string;
  external?: boolean;
  class?: string;
  id?: string;
  arrow?: string;
}

const { href, external = false, class: className, id, arrow } = Astro.props;
const viewArrow = arrow || 'â†’';
---

<a 
  href={href}
  class:list={["contact-link focus-ring", className]}
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
  id={id}
>
  <span class="contact-arrow">{viewArrow}</span>
  <slot />
</a>

<style>
  @reference "tailwindcss";
  
  .contact-link {
    @apply inline-flex items-center gap-2;
    @apply px-4 py-3 border border-slate-200 dark:border-slate-700 rounded-lg;
    @apply bg-white dark:bg-slate-800 text-slate-700 dark:text-slate-300 font-mono text-sm;
    @apply hover:bg-slate-50 dark:hover:bg-slate-700 hover:border-slate-300 dark:hover:border-slate-600 hover:text-slate-900 dark:hover:text-slate-100;
    @apply hover:-translate-y-0.5 hover:shadow-md;
    @apply active:translate-y-0 active:shadow-sm;
    @apply transition-all duration-300 ease-out;
    @apply relative overflow-hidden;
    text-decoration: none;
  }

  .contact-arrow {
    @apply transition-transform duration-300 ease-out;
  }

  .contact-link:hover .contact-arrow {
    @apply translate-x-1;
  }

</style>
