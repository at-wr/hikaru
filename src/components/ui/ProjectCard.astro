---
interface Props {
  title: string;
  url: string;
  description: string;
  tags: string[];
  external?: boolean;
}

const { title, url, description, tags, external = true } = Astro.props;
---

<a 
  href={url} 
  class="project-card group"
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
>
  <div class="flex items-start justify-between">
    <h3 class="project-title">{title}</h3>
    <svg 
      class="arrow-icon" 
      width="20" 
      height="20" 
      viewBox="0 0 24 24" 
      fill="none" 
      xmlns="http://www.w3.org/2000/svg"
    >
      <path 
        d="M7 17L17 7M17 7H7M17 7V17" 
        stroke="currentColor" 
        stroke-width="2" 
        stroke-linecap="round" 
        stroke-linejoin="round"
      />
    </svg>
  </div>
  <p class="project-description">{description}</p>
  <div class="project-tags">
    {tags.map(tag => (
      <span class="tag">{tag}</span>
    ))}
  </div>
</a>

<style>
  @reference "tailwindcss";
  
  .project-card {
    @apply block p-6 bg-white border border-slate-200 rounded-lg shadow-sm;
    @apply hover:border-slate-300 hover:bg-slate-50 hover:-translate-y-0.5;
    @apply active:translate-y-0 active:shadow-sm;
    @apply transition-all duration-300 ease-out;
    @apply relative overflow-hidden;
    text-decoration: none;
    color: inherit;
  }

  .project-title {
    @apply text-lg font-medium text-slate-800 mb-2;
    @apply group-hover:text-slate-700;
    transition: color 0.3s ease;
  }

  .arrow-icon {
    @apply text-slate-400 w-5 h-5;
    @apply transition-all duration-300 ease-out;
    @apply opacity-0 translate-x-2 -translate-y-1;
    @apply group-hover:opacity-100 group-hover:translate-x-0 group-hover:translate-y-0;
    @apply group-hover:text-slate-600;
    flex-shrink: 0;
  }

  .project-description {
    @apply text-slate-600 text-sm mb-4 leading-relaxed;
  }

  .project-tags {
    @apply flex flex-wrap gap-2;
  }

  .tag {
    @apply px-2 py-1 bg-slate-100 text-slate-600 rounded text-xs font-mono;
  }

  /* Shimmer effect */
  .project-card::before {
    content: '';
    @apply absolute inset-0 -translate-x-full;
    background: linear-gradient(90deg, transparent, rgba(148, 163, 184, 0.1), transparent);
    @apply group-hover:translate-x-full;
    transition: transform 0.6s ease;
  }
</style>
