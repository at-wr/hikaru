---
interface Props {
  title: string;
  url: string;
  description: string;
  tags: string[];
  external?: boolean;
}

const { title, url, description, tags, external = true } = Astro.props;
---

<a 
  href={url} 
  class="project-card group"
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
>
  <h3 class="project-title">{title}</h3>
  <p class="project-description">{description}</p>
  <div class="project-tags">
    {tags.map(tag => (
      <span class="tag">{tag}</span>
    ))}
  </div>
</a>

<style>
  @reference "tailwindcss";
  
  .project-card {
    @apply block p-6 bg-white border border-slate-200 rounded-lg shadow-sm;
    @apply hover:border-slate-300 hover:bg-slate-50 hover:-translate-y-0.5;
    @apply active:translate-y-0 active:shadow-sm;
    @apply transition-all duration-300 ease-out;
    @apply relative overflow-hidden;
    text-decoration: none;
    color: inherit;
  }

  .project-title {
    @apply text-lg font-medium text-slate-800 mb-2;
    @apply flex items-center justify-between;
    @apply group-hover:text-slate-700;
    transition: color 0.3s ease;
  }

  .project-title::after {
    content: 'â†’';
    @apply opacity-0 -translate-x-2 text-slate-400;
    @apply group-hover:opacity-100 group-hover:translate-x-0 group-hover:text-slate-700;
    @apply transition-all duration-300 ease-out;
  }

  .project-description {
    @apply text-slate-600 text-sm mb-4 leading-relaxed;
  }

  .project-tags {
    @apply flex flex-wrap gap-2;
  }

  .tag {
    @apply px-2 py-1 bg-slate-100 text-slate-600 rounded text-xs font-mono;
  }

  /* Shimmer effect */
  .project-card::before {
    content: '';
    @apply absolute inset-0 -translate-x-full;
    background: linear-gradient(90deg, transparent, rgba(148, 163, 184, 0.1), transparent);
    @apply group-hover:translate-x-full;
    transition: transform 0.6s ease;
  }
</style>
