---
import Foundation from "../layouts/Foundation.astro";
import Header from "../components/Header.astro";
import Main from "../components/Main.astro";
import { heroContent, contactContent } from "../data/content";

// Home meta description sourced from site content
const dynamicDescription = `${heroContent.tagline}. ${contactContent.description}`;
---

<Foundation description={dynamicDescription}>
  <Fragment slot="header">
    <Header customTitle="@at-wr" />
  </Fragment>
  <Main />
</Foundation>
