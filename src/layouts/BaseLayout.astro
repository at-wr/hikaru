---
import Foundation from "./Foundation.astro";

interface Props {
  title?: string;
  description?: string;
  variant?: 'default' | 'blog' | 'minimal';
  language?: string;
}

const { title, description, variant = 'default', language } = Astro.props;

const layoutClasses = {
  default: "min-h-screen bg-white",
  blog: "min-h-screen bg-white",
  minimal: "min-h-screen bg-slate-50"
};
---

<Foundation title={title} description={description} class={layoutClasses[variant]} language={language}>
  <slot name="header" slot="header" />
  <slot name="head" slot="head" />
  <main class="flex-1">
    <slot />
  </main>
</Foundation>

<style>
  @reference "tailwindcss";
</style>