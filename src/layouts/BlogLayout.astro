---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';
import Header from '../components/Header.astro';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, published, category, tags, description, language = 'en' } = post.data;

// Generate JSON-LD structured data
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description || title,
  "datePublished": published.toISOString(),
  "inLanguage": language?.replace("_", "-") || "en",
  "author": {
    "@type": "Person",
    "name": "Alan Ye",
    "url": Astro.site?.href || "https://wrye.dev"
  },
  "publisher": {
    "@type": "Person",
    "name": "Alan Ye",
    "url": Astro.site?.href || "https://wrye.dev"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": Astro.url.href
  },
  "articleSection": category,
  "keywords": tags.join(", "),
  "image": `${Astro.site?.href || "https://wrye.dev/"}og/posts/${post.slug}.png`
};

// Format date
const publishedDate = new Date(published).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={title} description={description} language={language}>
  <Fragment slot="header">
    <Header customTitle="Alan's Blog" />
  </Fragment>
  
  <script is:inline slot="head" type="application/ld+json" set:html={JSON.stringify(jsonLd)}></script>
  <div class="min-h-screen bg-white">
    <!-- Article content -->
    <article class="px-8 md:px-16 lg:px-24 py-16" style="view-transition-name: blog-content;">
      <div class="max-w-4xl mx-auto">
        <!-- Article header -->
        <header class="mb-12">
          <div class="mb-6">
            <a 
              href={`/archive/category/${category.toLowerCase().replace(/\s+/g, '-')}`}
              class="inline-block px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm font-medium mb-4 hover:bg-slate-200 transition-colors"
            >
              {category}
            </a>
            <h1 class="text-4xl md:text-5xl font-light text-slate-900 mb-4 leading-tight">
              {title}
            </h1>
            <p class="text-lg text-slate-600 leading-relaxed mb-6">
              {description}
            </p>
          </div>
          
          <!-- Metadata -->
          <div class="flex flex-wrap items-center gap-4 text-sm text-slate-500 font-mono">
            <time datetime={published.toISOString()}>
              {publishedDate}
            </time>
            <div class="flex flex-wrap gap-2">
              {tags.map(tag => (
                <a 
                  href={`/archive/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                  class="skill-tag hover:bg-slate-200"
                >
                  {tag}
                </a>
              ))}
            </div>
          </div>
        </header>

        <!-- Article content -->
        <div class="prose prose-lg max-w-none min-w-0">
          <div class="blog-content">
            <slot />
          </div>
        </div>

        <!-- Blog Post Footer -->
        <footer class="mt-16 pt-8 border-t border-slate-200 space-y-6">
          <!-- Navigation & Copyright -->
          <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
            <a 
              href="/archive" 
              class="inline-flex items-center text-slate-600 hover:text-slate-900 transition-colors text-sm font-mono"
            >
              ← Back to Archive
            </a>
            <div class="text-sm text-slate-500 font-mono text-center sm:text-right">
              <span class="whitespace-nowrap">© {new Date().getFullYear()} Alan Ye.</span>
              <span class="whitespace-nowrap"> Text licensed under 
                <a href="https://creativecommons.org/licenses/by-sa/4.0/" target="_blank" class="text-slate-700 underline hover:text-slate-900 transition-colors">
                  CC BY-SA 4.0
                </a>
              </span>
            </div>
          </div>
        </footer>
      </div>
    </article>
  </div>
</BaseLayout>

<style>
  @reference "tailwindcss";
  
  .blog-content {
    @apply text-slate-700 leading-relaxed;
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
  }

  .blog-content :global(h1) {
    @apply text-3xl font-light text-slate-900 mb-6 mt-12 first:mt-0;
    font-variation-settings: 'wght' 300;
  }

  .blog-content :global(h2) {
    @apply text-2xl font-light text-slate-900 mb-4 mt-10;
    font-variation-settings: 'wght' 300;
  }

  .blog-content :global(h3) {
    @apply text-xl font-medium text-slate-800 mb-3 mt-8;
    font-variation-settings: 'wght' 500;
  }

  .blog-content :global(h4) {
    @apply text-lg font-medium text-slate-800 mb-2 mt-6;
    font-variation-settings: 'wght' 500;
  }

  .blog-content :global(p) {
    @apply mb-6 text-base leading-relaxed;
    word-break: break-word;
    overflow-wrap: break-word;
  }

  .blog-content :global(ul), 
  .blog-content :global(ol) {
    @apply mb-6 pl-6 space-y-2;
  }

  .blog-content :global(li) {
    @apply text-base leading-relaxed;
    word-break: break-word;
    overflow-wrap: break-word;
  }

  .blog-content :global(ul li) {
    @apply list-disc;
  }

  .blog-content :global(ol li) {
    @apply list-decimal;
  }

  .blog-content :global(blockquote) {
    @apply border-l-4 border-slate-300 pl-6 py-2 my-6 italic text-slate-600;
    word-break: break-word;
    overflow-wrap: break-word;
  }

  .blog-content :global(code) {
    @apply bg-slate-100 text-slate-800 px-2 py-1 rounded text-sm font-mono;
    word-break: break-word;
    overflow-wrap: break-word;
  }

  .blog-content :global(pre) {
    @apply p-6 rounded-lg overflow-x-auto mb-6 text-sm;
    /* Let Shiki handle colors, only provide structure */
    overflow-x: auto;
    white-space: pre-wrap;
    word-break: break-word;
  }

  .blog-content :global(pre code) {
    @apply p-0;
    /* Let Shiki handle all syntax highlighting colors */
    background: transparent;
  }

  /* Ensure fallback for plain text blocks without Shiki styling */
  .blog-content :global(pre:not([class*="astro-code"])) {
    @apply bg-slate-50 text-slate-800 dark:bg-slate-900 dark:text-slate-100;
  }

  .blog-content :global(a) {
    @apply text-slate-900 underline hover:text-slate-600 transition-colors;
    word-break: break-word;
    overflow-wrap: break-word;
  }

  .blog-content :global(img) {
    @apply rounded-lg shadow-sm mb-6 max-w-full h-auto;
  }

  .blog-content :global(table) {
    @apply w-full border-collapse border border-slate-300 mb-6;
    word-break: break-word;
    overflow-wrap: break-word;
  }

  .blog-content :global(th), 
  .blog-content :global(td) {
    @apply border border-slate-300 px-4 py-2 text-left;
  }

  .blog-content :global(th) {
    @apply bg-slate-50 font-medium;
  }

  .blog-content :global(hr) {
    @apply border-t border-slate-200 my-12;
  }

  .skill-tag {
    @apply px-2 py-1 bg-slate-100 text-slate-700 rounded text-xs font-mono;
    @apply hover:bg-slate-200 transition-colors duration-200;
  }
</style>
